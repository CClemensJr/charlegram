<div class="posts-wrapper">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="post">
        <div class="post-head">
          <div class="name">Charles Clemens</div>
        </div>
        <div class="image">
          <div class="center-block">
            <%= link_to (image_tag post.image.url(:medium),
                          class: 'img-responsive'), post_path(post) %>
          </div>
          <div class="caption">
            <%= post.caption %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
